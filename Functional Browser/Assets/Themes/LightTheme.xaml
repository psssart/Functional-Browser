<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <sys:Boolean x:Key="IsThemeDictionary">True</sys:Boolean>

    <!-- Main Colors -->
    <SolidColorBrush x:Key="AppBackground" Color="#FFF0F0F0"/>
    <SolidColorBrush x:Key="ElementBackground" Color="White"/>
    <SolidColorBrush x:Key="ElementBorder" Color="#FFCCCCCC"/>

    <SolidColorBrush x:Key="ElementHover" Color="#FFE5E5E5"/>
    <SolidColorBrush x:Key="ElementBorderHover" Color="#FFB3B3B3"/>

    <SolidColorBrush x:Key="ElementClick" Color="#FFBFBFBF"/>
    <SolidColorBrush x:Key="ElementBorderClick" Color="#FF999999"/>

    <!-- Icon Brush -->
    <SolidColorBrush x:Key="IconBrush" Color="Black"/>

    <!-- TabItem Brushes -->
    <LinearGradientBrush x:Key="TabItem.Static.Background" EndPoint="0,1" StartPoint="0,0">
        <GradientStop Color="White" Offset="0.0"/>
        <GradientStop Color="White" Offset="1.0"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="TabItem.Static.Border" Color="#FFCCCCCC"/>

    <LinearGradientBrush x:Key="TabItem.MouseOver.Background" EndPoint="0,1" StartPoint="0,0">
        <GradientStop Color="#FFE0E0E0" Offset="0.0"/>
        <GradientStop Color="#FFE0E0E0" Offset="1.0"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="TabItem.MouseOver.Border" Color="#FFB3B3B3"/>

    <SolidColorBrush x:Key="TabItem.Selected.Background" Color="#FF999999"/>
    <SolidColorBrush x:Key="TabItem.Selected.Border" Color="#FFB3B3B3"/>

    <SolidColorBrush x:Key="TabItem.Disabled.Background" Color="#FF999999"/>
    <SolidColorBrush x:Key="TabItem.Disabled.Border" Color="Black"/>
    <!-- Redefining buttons -->
    <SolidColorBrush x:Key="Button.Static.Background" Color="#FFDDDDDD"/>
    <SolidColorBrush x:Key="Button.Static.Border" Color="#FFCCCCCC"/>
    <SolidColorBrush x:Key="Button.MouseOver.Background" Color="#FFE5E5E5"/>
    <SolidColorBrush x:Key="Button.MouseOver.Border" Color="#FFB3B3B3"/>
    <SolidColorBrush x:Key="Button.Pressed.Background" Color="#FFBFBFBF"/>
    <SolidColorBrush x:Key="Button.Pressed.Border" Color="#FF999999"/>

    <!-- TextBox -->
    <SolidColorBrush x:Key="TextBox.Static.Border" Color="#FFABADB3"/>
    <SolidColorBrush x:Key="TextForeground" Color="Black"/>
</ResourceDictionary>